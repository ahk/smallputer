parse_args () {
  if [ $# -lt 1 ]; then
    echo "usage: please enter a host name to target."
    exit
  fi

  host=$1
  user='pi'
  proj_name=${PWD##*/}
}

main () {
  echo "pushing cwd project ..."
  rsync -av ./ "${user}@${host}":${proj_name}/ && \
  echo "project push completed."
}

parse_args $@
main
